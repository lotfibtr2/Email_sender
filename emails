import smtplib
from email.message import EmailMessage

email = EmailMessage()

email['FROM'] = 'bouteraa lotfi'
email['To'] = 'bouteraa.lotfi2000@gmail.com'
email['Subject'] = 'Hi, THis is a script that send emails using Python!'
email.set_content('You Have Won 10000 dollars!')

with smtplib.SMTP(host='smtp.gmail.com', port= 587) as smtp:
    smtp.ehlo()
    smtp.starttls()
    smtp.login('lotfi.bouteraa@ulbsibiu.ro', 'LotfiRania200.')
    smtp.send_message(email)
    print('all good')
